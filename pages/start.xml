<page id="start" bg_image="background.png" >

<fab-if when="$narrative_start=0">
  <agent
    id="start_message_1"
    text="$visitante… você tinha razão. Eu menti para você. Não deveria, mas -"
    color="white"
    x="150"
    y="460"
    width = "700"
    animation="typewriter"
      />

 <agent
    id="start_button_1"
    text="continuar?"
    x="350"
    y="510"
    color="white"
    on_click="set(narrative_start, $narrative_start + 1)"        
    animation="hover-grow"
  />
  </fab-if>


<fab-if when="$narrative_start=1">
  <agent
    id="start_message_2"
    text="Tudo o que eu posso dizer é, se você receber isso…"
    color="white"
    x="200"
    y="460"
    width = "700"
    animation="typewriter"
  />
  
  <agent
    id="start_button_2"
    text="continuar?"
    x="350"
    y="510"
    color="white"
    on_click="set(narrative_start, $narrative_start + 1)"
    animation="hover-grow"
  /> 
  </fab-if>

  <fab-if when="$narrative_start=2">
      <agent
    id="start_message_3"
    text="Fique longe."
    color="white"
    x="center"
    y="420"
    font-size="40"
    animation="fade-in"
  />
    
  <agent
    id="start_button_3"
    text="continuar?"
    x="350"
    y="510"
    color="white"
    on_click="goToPage('choice1')"
    animation="hover-grow"
  />
  </fab-if>

</page>